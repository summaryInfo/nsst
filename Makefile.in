NAME ?= @NAME@
PERFIX ?= @PREFIX@
BINDIR ?= @BINDIR@
MANDIR ?= @MANDIR@
SHAREDIR ?= @SHAREDIR@

@VARS@

CFLAGS += -std=c11 -Wall -Wextra -Wpedantic @EXTRAWARNINGS@

OBJ := @OBJECTS@

LIBS != pkg-config @DEPS@ --libs
INCLUES != pkg-config @DEPS@ --cflags

LDLIBS += @LIBRT@ -lm -lutil $(LIBS)
CFLAGS += $(INCLUES)


all: $(NAME) $(NAME)c

clean:
	rm -rf *.o *.gcda $(NAME) $(NAME)c

force: clean
	$(MAKE) all

install-strip: install
	strip $(BINDIR)/$(NAME)
	strip $(BINDIR)/$(NAME)c

install: all
	install -D $(NAME) $(DESTDIR)$(BINDIR)/$(NAME)
	install -D $(NAME)c $(DESTDIR)$(BINDIR)/$(NAME)c
	install -D nsst-open $(DESTDIR)$(BINDIR)/$(NAME)-open
	install -Dm 644 docs/nsst.conf $(DESTDIR)$(SHAREDIR)/$(NAME)/nsst.conf
	install -Dm 644 docs/nsst.1 $(DESTDIR)$(MANDIR)/man1/$(NAME).1

uninstall:
	rm -rf $(DESTDIR)$(SHAREDIR)/nsst
	rm -f $(DESTDIR)$(MANDIR)/man1/nsst.1
	rm -f $(DESTDIR)$(BINDIR)/$(NAME)
	rm -f $(DESTDIR)$(BINDIR)/$(NAME)c

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) $(LDLIBS) -o $@

$(NAME)c: nsstc.o
	$(CC) $(CFLAGS) $(LDFLAGS) nsstc.o -o $@

nsstc.o: feature.h
nsst.o: feature.h config.h font.h line.h util.h nrcs.h input.h tty.h window.h hashtable.h multipool.h
util.o: feature.h config.h font.h line.h util.h nrcs.h precompose-table.h hashtable.h wide.h multipool.h
config.o: feature.h config.h font.h line.h util.h nrcs.h input.h window.h hashtable.h multipool.h
poller.o: feature.h config.h util.h
daemon.o: feature.h config.h util.h window.h font.h
input.o: feature.h config.h font.h line.h util.h nrcs.h input.h term.h window.h hashtable.h multipool.h
mouse.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h uri.h window.h hashtable.h multipool.h
nrcs.o: feature.h nrcs.h util.h
multipool.o: feature.h multipool.h
line.o: feature.h line.h uri.h util.h multipool.h
screen.o : feature.h config.h line.h util.h nrcs.h mouse.h term.h window.h uri.h hashtable.h screen.h multipool.h
uri.o: feature.h config.h uri.h font.h line.h util.h nrcs.h hashtable.h multipool.h
tty.o: feature.h config.h font.h line.h util.h nrcs.h tty.h hashtable.h multipool.h
term.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h window.h tty.h uri.h hashtable.h screen.h multipool.h
boxdraw.o: feature.h config.h font.h line.h util.h nrcs.h boxdraw.h term.h window.h hashtable.h multipool.h
font.o: feature.h config.h font.h line.h util.h nrcs.h window.h hashtable.h multipool.h
image.o: feature.h util.h image.h font.h hashtable.h
window.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h window.h window-impl.h uri.h multipool.h
window-x11.o: feature.h config.h line.h util.h nrcs.h mouse.h term.h window.h window-impl.h window-x11.h uri.h multipool.h
render-x11shm.o: feature.h config.h font.h line.h util.h nrcs.h mouse.h term.h window.h window-impl.h window-x11.h hashtable.h multipool.h
