NAME ?= @NAME@
PERFIX ?= @PREFIX@
BINDIR ?= @BINDIR@
MANDIR ?= @MANDIR@
SHAREDIR ?= @SHAREDIR@

@VARS@

CFLAGS += -std=c11 -Wall -Wextra -Wno-implicit-fallthrough

OBJ := @OBJECTS@

LIBS != pkg-config @DEPS@ --libs
INCLUES != pkg-config @DEPS@ --cflags

LDFLAGS += -lrt -lm -lutil $(LIBS)
CFLAGS += $(INCLUES)


all: $(NAME) $(NAME)c

clean:
	rm -rf *.o *.gcda $(NAME)

force: clean
	$(MAKE) all

install-strip: install
	strip $(BINDIR)/$(NAME)

install: all
	install -D $(NAME) $(BINDIR)/$(NAME)
	install -D $(NAME)c $(BINDIR)/$(NAME)c
	install -Dm 644 docs/nsst.conf $(SHAREDIR)/nsst/nsst.conf
	install -Dm 644 docs/nsst.1 $(MANDIR)/man1/nsst.1

uninstall:
	rm -rf $(SHAREDIR)/nsst
	rm -f $(MANDIR)/man1/nsst.1
	rm -f $(BINDIR)/$(NAME)
	rm -f $(BINDIR)/$(NAME)c

$(NAME): $(OBJ)
	$(CCLD) $(CFLAGS) $(OBJ) $(LDFLAGS) -o $@

$(NAME)c: nsstc.o
	$(CCLD) $(CFLAGS) nsstc.o $(LDFLAGS) -o $@

font.o: util.h config.h window.h boxdraw.h feature.h
window-x11.o: util.h config.h term.h window.h window-x11.h line.h input.h mouse.h feature.h
render-x11shm.o: util.h config.h term.h window.h window-x11.h line.h mouse.h image.h feature.h
render-x11xrender.o: util.h config.h term.h window.h window-x11.h line.h mouse.h feature.h
input.o: util.h config.h term.h input.h nrcs.h feature.h
term.o: util.h config.h term.h tty.h line.h input.h mouse.h window.h nrcs.h feature.h
nsst.o: util.h config.h term.h tty.h window.h feature.h
util.o: util.h config.h feature.h precompose-table.h
nrcs.o : nrcs.h feature.h
config.o: config.h util.h line.h input.h feature.h
boxdraw.o: boxdraw.h config.h font.h feature.h
image.o: util.h image.h font.h feature.h
mouse.o: config.h mouse.h window.h feature.h
tty.o: config.h tty.h util.h feature.h
line.o: line.h util.h feature.h
nsstc.o: feature.h


.PHONY: all clean install install-strip uninstall force
