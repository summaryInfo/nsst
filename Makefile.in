NAME ?= @NAME@
PERFIX ?= @PREFIX@
BINDIR ?= @BINDIR@
MANDIR ?= @MANDIR@
SHAREDIR ?= @SHAREDIR@

@VARS@

CFLAGS += -std=c11 -Wall -Wextra -Wpedantic
CFLAGS += -Wno-unknown-warning -Wno-unknown-warning-option
CFLAGS += -Walloca -Wno-aggressive-loop-optimizations
CFLAGS += -Wdisabled-optimization -Wduplicated-branches -Wduplicated-cond
CFLAGS += -Wignored-attributes  -Wincompatible-pointer-types
CFLAGS += -Winit-self -Wwrite-strings -Wvla
CFLAGS += -Wmissing-attributes -Wmissing-format-attribute -Wmissing-noreturn
CFLAGS += -Wswitch-bool -Wpacked -Wshadow -Wformat-security
CFLAGS += -Wswitch-unreachable -Wlogical-op -Wstringop-truncation
CFLAGS += -Wbad-function-cast -Wnested-externs -Wstrict-prototypes

OBJ := @OBJECTS@

LIBS != pkg-config @DEPS@ --libs
INCLUES != pkg-config @DEPS@ --cflags

LDLIBS += -lrt -lm -lutil $(LIBS)
CFLAGS += $(INCLUES)


all: $(NAME) $(NAME)c

clean:
	rm -rf *.o *.gcda $(NAME)

force: clean
	$(MAKE) all

install-strip: install
	strip $(BINDIR)/$(NAME)

install: all
	install -D $(NAME) $(BINDIR)/$(NAME)
	install -D $(NAME)c $(BINDIR)/$(NAME)c
	install -Dm 644 docs/nsst.conf $(SHAREDIR)/nsst/nsst.conf
	install -Dm 644 docs/nsst.1 $(MANDIR)/man1/nsst.1

uninstall:
	rm -rf $(SHAREDIR)/nsst
	rm -f $(MANDIR)/man1/nsst.1
	rm -f $(BINDIR)/$(NAME)
	rm -f $(BINDIR)/$(NAME)c

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) $(LDLIBS) -o $@
$(NAME)c: nsstc.o

boxdraw.o: feature.h config.h font.h line.h util.h nrcs.h boxdraw.h term.h window.h
config.o: feature.h config.h font.h line.h util.h nrcs.h input.h window.h
font.o: feature.h config.h font.h line.h util.h nrcs.h window.h
image.o: feature.h util.h image.h font.h
input.o: feature.h config.h font.h line.h util.h nrcs.h input.h term.h window.h
line.o: feature.h line.h uri.h util.h
mouse.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h uri.h window.h
nrcs.o: feature.h nrcs.h
nsst.o: feature.h config.h font.h line.h util.h nrcs.h input.h tty.h window.h
nsstc.o: feature.h
render-x11shm.o: feature.h config.h font.h line.h util.h nrcs.h mouse.h term.h window.h window-x11.h
render-x11xrender.o: feature.h config.h font.h line.h util.h nrcs.h mouse.h term.h window.h window-x11.h
term.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h window.h tty.h uri.h
tty.o: feature.h config.h font.h line.h util.h nrcs.h tty.h
util.o: feature.h config.h font.h line.h util.h nrcs.h precompose-table.h
window-x11.o: feature.h config.h font.h line.h util.h nrcs.h input.h mouse.h term.h window.h window-x11.h
uri.o: feature.h config.h uri.h font.h line.h util.h nrcs.h

.PHONY: all clean install install-strip uninstall force
