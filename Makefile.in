NAME ?= @NAME@
PERFIX ?= @PREFIX@
BINDIR ?= @BINDIR@
MANDIR ?= @MANDIR@

@VARS@

CFLAGS += -std=c11 -Wall -Wextra -Wno-implicit-fallthrough

OBJ := window.o nsst.o util.o font.o term.o config.o input.o nrcs.o boxdraw.o image.o render.o

LIBS != pkg-config @DEPS@ --libs
INCLUES != pkg-config @DEPS@ --cflags

LDFLAGS += -lm -lutil $(LIBS)
CFLAGS += $(INCLUES)


all: $(NAME)

clean:
	rm -rf *.o $(NAME)

force: clean
	$(MAKE) all

install-strip: all
	strip $(NAME)
	install $(NAME) $(BINDIR)/$(NAME)

install: all
	install $(NAME) $(BINDIR)/$(NAME)

uninstall:
	rm -f $(BINDIR)/$(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) $(LDFLAGS) -o $@

font.o: util.h config.h window.h boxdraw.h feature.h
window.o: util.h config.h term.h window.h window-private.h input.h feature.h
render.o: util.h config.h term.h window.h window-private.h image.h feature.h
input.o: util.h config.h term.h input.h nrcs.h feature.h
term.o: util.h config.h term.h input.h window.h nrcs.h feature.h
nsst.o: util.h config.h term.h window.h feature.h
util.o: util.h config.h feature.h
nrcs.o : nrcs.h feature.h
config.o: config.h util.h term.h input.h feature.h
boxdraw.o: boxdraw.h font.h feature.h
image.o: util.h image.h font.h feature.h

.PHONY: all clean install install-strip uninstall force
